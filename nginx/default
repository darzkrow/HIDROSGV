server {
    listen 80;
    server_name gestioncomercial.hidroven.gob.ve;

    # Ruta al directorio de tu proyecto
    root /home/gfranco/Escritorio/HIDROSGV;

    # Logs
    access_log /var/log/nginx/gestioncomercial_access.log;
    error_log /var/log/nginx/gestioncomercial_error.log;

    # Configuraci칩n para servir archivos est치ticos
    location /static/ {
        alias /var/www/html/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # Configuraci칩n para servir archivos de medios
    location /media/ {
        alias /var/www/html/media/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # Proxy para Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
    }

    # Seguridad b치sica
    client_max_body_size 20M;
    sendfile on;
    keepalive_timeout 65;
    server_tokens off;
}
